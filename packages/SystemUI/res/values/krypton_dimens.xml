    <!-- StatusBar burn-in protection -->
    <dimen name="horizontal_max_swift">3.0dp</dimen>
    <dimen name="vertical_max_swift">1.0dp</dimen>

    <!-- AlertSlider -->
    <dimen name="alertslider_bg_radius">24dp</dimen>
    <dimen name="alertslider_dialog_minheight">48dp</dimen>
    <dimen name="alertslider_dialog_minwidth">108dp</dimen>
    <dimen name="alertslider_dialog_padding">15dp</dimen>
    <dimen name="alertslider_text_fontsize">14sp</dimen>
    <dimen name="alertslider_step_size">11dp</dimen>

    <!-- Recognizing fingerprint animation -->
    <dimen name="fod_animation_size">240dp</dimen>
    <dimen name="fod_animation_offset">0dp</dimen>

    <!-- Biometric Prompt -->
    <dimen name="biometric_dialog_fod_margin">12dp</dimen>

