    <!-- Ambient music padding above FOD-->
    <dimen name="keyguard_security_fod_view_margin">140dp</dimen>

    <!-- Additional gesture navbar lengths -->
    <dimen name="navigation_home_handle_width_medium">110dp</dimen>
    <dimen name="navigation_home_handle_width_long">140dp</dimen>

    <!-- Network traffic -->
    <dimen name="network_traffic_padding_ends">0.5dp</dimen>
    <dimen name="network_traffic_unit_text_default_size">8sp</dimen>
    <item name="network_traffic_rate_text_default_scale_factor" format="float" type="dimen">1.5</item>
    <item name="network_traffic_line_spacing_multiplier" format="float" type="dimen">0.8</item>
